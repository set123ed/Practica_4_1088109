<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Practica4.Views.SignUpContactPage"
      xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="true">
    <ContentPage.Content>
         <ScrollView>
           <Grid RowDefinitions="auto,auto,auto" ColumnDefinitions="*">
               <Entry Placeholder="Name" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="FillAndExpand"
                      Style="{StaticResource Key=entryStyle}"  />
            <Entry Placeholder="Number"  VerticalOptions="Center" HorizontalOptions="FillAndExpand"
                   Grid.Row="1"  Style="{StaticResource Key=entryStyle}"/>
             <Button Text="Add Contact"  VerticalOptions="Center" HorizontalOptions="FillAndExpand" Grid.Row="2"
                     Command="{Binding AddContactCommand}" Style="{x:StaticResource buttonStyle}" />
           </Grid>
        </ScrollView>
       
    </ContentPage.Content>
</ContentPage>
