<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Contacts.Views.AddContactPage"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    ios:Page.UseSafeArea="true">
    <ContentPage.Content>
<StackLayout Orientation="Vertical" Margin="40">
            <StackLayout>
                <Entry Text="{Binding nContact.Name}" Placeholder="Name" Style="{StaticResource Key=labelStyle1}"/>
                <Entry Text="{Binding nContact.Number}" Placeholder="Number" Style="{StaticResource Key=labelStyle1}"/>
            </StackLayout>
            <StackLayout>
                <Button Text="Add" Command="{Binding AddCommand}" Style="{StaticResource Key=buttonStyle1}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
